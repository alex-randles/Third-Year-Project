<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="coogans2.dcu.ie.wordnu.VehiclesActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@android:color/holo_blue_bright">

            <TextView
                android:id="@+id/titleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:fontFamily="monospace"
                android:text="@string/wordup"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/homeBTN"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Home"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/logoutBTN"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/logout"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:alignmentMode="alignBounds"
            android:columnCount="2"
            android:padding="5dp"
            android:rowCount="3">

            <Button
                android:id="@+id/vehicles_carBTN"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:background="@drawable/vehicles_car"
                android:gravity="bottom|center_vertical|center_horizontal"
                android:padding="20dp"
                android:text="@string/vehicles_car"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/vehicles_shipBTN"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:background="@drawable/vehicles_ship"
                android:gravity="bottom|center_vertical|center_horizontal"
                android:padding="20dp"
                android:text="@string/vehicles_ship"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/vehicles_bikeBTN"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:background="@drawable/vehicles_bike"
                android:gravity="bottom|center_vertical|center_horizontal"
                android:padding="20dp"
                android:text="@string/vehicles_bike"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/vehicles_taxiBTN"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:background="@drawable/vehicles_taxi"
                android:gravity="bottom|center_vertical|center_horizontal"
                android:padding="20dp"
                android:text="@string/vehicles_taxi"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/vehicles_planeBTN"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:background="@drawable/vehicles_plane"
                android:gravity="bottom|center_vertical|center_horizontal"
                android:padding="20dp"
                android:text="@string/vehicles_plane"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/vehicles_motorbikeBTN"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:background="@drawable/vehicles_motorbike"
                android:gravity="bottom|center_vertical|center_horizontal"
                android:padding="20dp"
                android:text="@string/vehicles_motorbike"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

        </GridLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
